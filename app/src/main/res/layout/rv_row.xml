<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardElevation="@dimen/height_dim"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relative_parent"
        android:padding="@dimen/height_dim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageDeal"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher"
            />
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:layout_below="@+id/imageDeal"
            android:layout_marginTop="@dimen/height_dim"
            app:layout_constraintStart_toEndOf="@+id/imageDeal"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_marginTop="@dimen/height_dim"
            android:layout_below="@+id/tvTitle"
            app:layout_constraintStart_toEndOf="@+id/imageDeal"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"/>
        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_below="@+id/tvDescription"
            android:layout_marginTop="@dimen/height_dim"
            android:layout_alignParentRight="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDescription"
            android:textColor="@color/colorAccent"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>
